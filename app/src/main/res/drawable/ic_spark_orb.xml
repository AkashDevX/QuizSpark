    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <size android:width="140dp" android:height="140dp" />
            <solid android:color="#334A66FF" />
        </shape>
    </item>

    <!-- Mid glow -->
    <item android:left="14dp" android:top="14dp" android:right="14dp" android:bottom="14dp">
        <shape android:shape="oval">
            <solid android:color="#554A66FF" />
        </shape>
    </item>

    <!-- Core -->
    <item android:left="30dp" android:top="30dp" android:right="30dp" android:bottom="30dp">
        <shape android:shape="oval">
            <solid android:color="#FFFFFFFF" />
        </shape>
    </item>

    <!-- Small spark dot -->
    <item android:left="92dp" android:top="40dp" android:right="36dp" android:bottom="88dp">
        <shape android:shape="oval">
            <solid android:color="#FF4A66FF" />
        </shape>
    </item>

</layer-list>
