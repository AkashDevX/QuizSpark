<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_purple_background" />
        </shape>
    </item>
    <!-- Pattern overlay using multiple circles as shapes -->
    <item android:top="50dp" android:left="50dp">
        <shape android:shape="oval">
            <size android:width="60dp" android:height="60dp" />
            <solid android:color="@color/dark_purple_pattern" />
        </shape>
    </item>
    <item android:top="80dp" android:left="150dp">
        <shape android:shape="oval">
            <size android:width="50dp" android:height="50dp" />
            <solid android:color="@color/dark_purple_pattern" />
        </shape>
    </item>
    <item android:top="150dp" android:left="100dp">
        <shape android:shape="oval">
            <size android:width="70dp" android:height="70dp" />
            <solid android:color="@color/dark_purple_pattern" />
        </shape>
    </item>
    <item android:top="130dp" android:left="30dp">
        <shape android:shape="oval">
            <size android:width="40dp" android:height="40dp" />
            <solid android:color="@color/dark_purple_pattern" />
        </shape>
    </item>
</layer-list>
