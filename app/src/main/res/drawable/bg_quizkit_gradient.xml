<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="#3D5AFE"
                android:centerColor="#4A66FF"
                android:endColor="#0E1B5C" />
        </shape>
    </item>

    <!-- soft circles like Quizkit -->
    <item android:left="-120dp" android:top="40dp">
        <shape android:shape="oval">
            <size android:width="260dp" android:height="260dp" />
            <solid android:color="#33FFFFFF" />
        </shape>
    </item>

    <item android:right="-140dp" android:top="-40dp">
        <shape android:shape="oval">
            <size android:width="300dp" android:height="300dp" />
            <solid android:color="#22FFFFFF" />
        </shape>
    </item>

</layer-list>
