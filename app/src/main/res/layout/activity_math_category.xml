<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:background="@drawable/bg_quizkit_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvMathTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Choose Math Quiz"
            android:layout_marginTop="28dp"
            android:textColor="@android:color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvMathSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Pick a mode to start playing."
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/tvMathTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Grid container (KEEP SAME ID 'grid') -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/grid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvMathSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Addition -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:text="Addition (+)"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#F4F6FF"
                app:cornerRadius="26dp"
                app:backgroundTint="#1AFFFFFF"
                app:strokeColor="#2FFFFFFF"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnSub"
                app:layout_constraintWidth_percent="0.48" />

            <!-- Subtraction -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSub"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:text="Subtraction (-)"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#F4F6FF"
                app:cornerRadius="26dp"
                app:backgroundTint="#1AFFFFFF"
                app:strokeColor="#2FFFFFFF"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toTopOf="@id/btnAdd"
                app:layout_constraintStart_toEndOf="@id/btnAdd"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"
                app:layout_constraintWidth_percent="0.48" />

            <!-- Multiplication -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMul"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:text="Multiplication (ร)"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#F4F6FF"
                app:cornerRadius="26dp"
                app:backgroundTint="#1AFFFFFF"
                app:strokeColor="#2FFFFFFF"
                app:strokeWidth="1dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnAdd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnDiv"
                app:layout_constraintWidth_percent="0.48" />

            <!-- Division -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDiv"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:text="Division (รท)"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#F4F6FF"
                app:cornerRadius="26dp"
                app:backgroundTint="#1AFFFFFF"
                app:strokeColor="#2FFFFFFF"
                app:strokeWidth="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnSub"
                app:layout_constraintStart_toEndOf="@id/btnMul"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.48" />

            <!-- Biggest Number -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBiggest"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:text="Biggest Number ?"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#F4F6FF"
                app:cornerRadius="26dp"
                app:backgroundTint="#1AFFFFFF"
                app:strokeColor="#2FFFFFFF"
                app:strokeWidth="1dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnMul"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnNextNumber"
                app:layout_constraintWidth_percent="0.48" />

            <!-- Next Number -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextNumber"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:text="Next Number X,Y,_"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#F4F6FF"
                app:cornerRadius="26dp"
                app:backgroundTint="#1AFFFFFF"
                app:strokeColor="#2FFFFFFF"
                app:strokeWidth="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnDiv"
                app:layout_constraintStart_toEndOf="@id/btnBiggest"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.48" />

            <!-- BODMAS (full width) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBodmas"
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:text="BODMAS (),OF,/,X,+,-"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#F4F6FF"
                app:cornerRadius="26dp"
                app:backgroundTint="#22FFFFFF"
                app:strokeColor="#35FFFFFF"
                app:strokeWidth="1dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnBiggest"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
