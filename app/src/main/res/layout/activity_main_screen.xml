<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:background="@drawable/bg_quizkit_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="18dp"
        tools:context=".MainScreen.MainScreenActivity">

        <!-- Top row: menu + profile (optional) -->
        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:padding="10dp"
            android:src="@drawable/ic_menu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@android:color/white" />

<!--        <com.google.android.material.imageview.ShapeableImageView-->
<!--            android:id="@+id/imgProfile"-->
<!--            android:layout_width="42dp"-->
<!--            android:layout_height="42dp"-->
<!--            android:src="@drawable/ic_profile_placeholder"-->
<!--            android:scaleType="centerCrop"-->
<!--            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialComponents.Corner.Full"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <!-- Header (KEEP ID tvAppName) -->
        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:text="QuizSpark"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@android:color/white"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/btnMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- Sub text -->
        <TextView
            android:id="@+id/tvSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="6dp"
            android:text="Pick a quiz category to begin."
            android:fontFamily="@font/poppins_regular"
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvAppName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ========================= -->
        <!-- Tiles (KEEP SAME IDs)     -->
        <!-- ========================= -->

        <!-- History Quiz (cardHistory) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHistory"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginTop="22dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#35FFFFFF"
            app:cardBackgroundColor="#35FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardMaths"
            app:layout_constraintWidth_percent="0.48">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/iconWrapHistory"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#55FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#55FFFFFF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:src="@drawable/ic_history"
                        app:tint="#EFFFFFFF" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvHistoryTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="History Quiz"
                    android:textColor="#F4F6FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    app:layout_constraintTop_toBottomOf="@id/iconWrapHistory"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvHistorySub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Play single"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#CFE5FF"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/tvHistoryTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Maths Quiz (cardMaths) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMaths"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginTop="22dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#35FFFFFF"
            app:cardBackgroundColor="#22FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvSub"
            app:layout_constraintStart_toEndOf="@id/cardHistory"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/iconWrapMath"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#55FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#55FFFFFF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:src="@drawable/ic_math"
                        app:tint="#EFFFFFFF" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvMathTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Maths Quiz"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#F4F6FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/iconWrapMath"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvMathSub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Practice skills"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#CFE5FF"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/tvMathTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Celebrity Quiz (cardCelebrity) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCelebrity"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginTop="14dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#35FFFFFF"
            app:cardBackgroundColor="#22FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/cardHistory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cardAbout"
            app:layout_constraintWidth_percent="0.48">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/iconWrapCeleb"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#55FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#55FFFFFF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:src="@drawable/ic_star"
                        app:tint="#EFFFFFFF" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvCelebTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Celebrity Quiz"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#F4F6FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/iconWrapCeleb"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvCelebSub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Fun mode"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#CFE5FF"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/tvCelebTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- About Us (cardAbout) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAbout"
            android:layout_width="0dp"
            android:layout_height="190dp"
            android:layout_marginTop="14dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#35FFFFFF"
            app:cardBackgroundColor="#22FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/cardMaths"
            app:layout_constraintStart_toEndOf="@id/cardCelebrity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.48"
            android:layout_marginBottom="22dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="18dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/iconWrapAbout"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#55FFFFFF"
                    app:strokeWidth="1dp"
                    app:strokeColor="#55FFFFFF"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="16dp"
                        android:src="@drawable/ic_info"
                        app:tint="#EFFFFFFF" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvAboutTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="About Us"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="#F4F6FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/iconWrapAbout"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/tvAboutSub"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Read more"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="#CFE5FF"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/tvAboutTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Footer -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="18dp"
            android:text="Â© 2025 QuantumSpark Studios"
            android:textAlignment="center"
            android:textColor="#BFD3FF"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/cardAbout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
