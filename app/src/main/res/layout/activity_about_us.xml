<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Quiz Spark"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- App Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Quiz Spark is a fun and interactive quiz application designed to test your knowledge across multiple categories. The app is built to be simple, fast, and engaging for users of all ages."
            android:textSize="15sp" />

        <!-- Company Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="About QuantumSpark Studios"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- Company Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="QuantumSpark Studios is a creative software studio focused on building high-quality mobile applications and interactive experiences. Our goal is to deliver simple, reliable, and enjoyable digital products."
            android:textSize="15sp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="#DDDDDD" />

        <!-- Feedback Section Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Rate and Send Feedback"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Stars -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Your rating"
            android:textSize="14sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:numStars="5"
            android:stepSize="1.0"
            android:rating="5" />

        <!-- Feedback Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Your message"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/etFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:hint="Write a short feedback..."
            android:minLines="3"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- Send Button -->
        <Button
            android:id="@+id/btnSendFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Feedback"
            android:layout_marginTop="14dp" />

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â© 2025 QuantumSpark Studios"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:textSize="13sp" />

    </LinearLayout>
</ScrollView>
