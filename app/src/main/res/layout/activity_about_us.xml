<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:background="@drawable/bg_quizkit_gradient">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <!-- Header -->
        <TextView
            android:id="@+id/tvAboutTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="About Quiz Spark"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvAboutSub"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Learn about the app and share your feedback."
            android:textColor="#CCFFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/tvAboutTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- App Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardApp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#22FFFFFF"
            app:strokeColor="#35FFFFFF"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvAboutSub"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz Spark"
                    android:textColor="#F4F6FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="3dp"
                    android:text="Quiz Spark is a fun and interactive quiz application designed to test your knowledge across multiple categories. The app is built to be simple, fast, and engaging for users of all ages."
                    android:textColor="#DCE6FF"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Studio Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStudio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#22FFFFFF"
            app:strokeColor="#35FFFFFF"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/cardApp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QuantumSpark Studios"
                    android:textColor="#F4F6FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:lineSpacingExtra="3dp"
                    android:text="QuantumSpark Studios is a creative software studio focused on building high-quality mobile applications and interactive experiences. Our goal is to deliver simple, reliable, and enjoyable digital products."
                    android:textColor="#DCE6FF"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Feedback Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFeedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            app:cardCornerRadius="26dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#22FFFFFF"
            app:strokeColor="#35FFFFFF"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/cardStudio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate and Send Feedback"
                    android:textColor="#F4F6FF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Your rating"
                    android:textColor="#DCE6FF"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_regular" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:rating="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Your message"
                    android:textColor="#DCE6FF"
                    android:textSize="13sp"
                    android:fontFamily="@font/poppins_regular" />

                <!-- Modern input container -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#1AFFFFFF"
                    app:strokeColor="#2FFFFFFF"
                    app:strokeWidth="1dp">

                    <EditText
                        android:id="@+id/etFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="top"
                        android:hint="Write a short feedback..."
                        android:inputType="textMultiLine"
                        android:minLines="4"
                        android:padding="14dp"
                        android:textColor="#F4F6FF"
                        android:textColorHint="#A9B7E8"
                        android:textSize="14sp" />
                </com.google.android.material.card.MaterialCardView>

                <!-- CTA Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSendFeedback"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:layout_marginTop="14dp"
                    android:text="Send Feedback"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold"
                    app:cornerRadius="18dp"
                    app:backgroundTint="#FFFFFF"
                    android:textColor="#1A1F3A" />

                <!-- Small note -->
                <TextView
                    android:id="@+id/tvNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Thanks! Your feedback helps us improve."
                    android:textAlignment="center"
                    android:textColor="#CFE0FF"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_regular" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Footer -->
        <TextView
            android:id="@+id/tvFooter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:text="Â© 2025 QuantumSpark Studios"
            android:textAlignment="center"
            android:textColor="#BFD3FF"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toBottomOf="@id/cardFeedback"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
