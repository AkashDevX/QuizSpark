<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_quizkit_gradient">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="18dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="28dp"
        android:text="Math Quiz"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp" />

    <!-- Top Info Card (Progress + Score + Timer) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTopInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#22FFFFFF"
        app:strokeColor="#35FFFFFF"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Q: 1/20"
                android:textColor="#F4F6FF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score: 0"
                android:textColor="#F4F6FF"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Time: 15s"
                android:textColor="#DCE6FF"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                app:layout_constraintTop_toBottomOf="@id/tvProgress"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Question Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardQuestionContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#22FFFFFF"
        app:strokeColor="#35FFFFFF"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/cardTopInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="110dp"
            android:padding="18dp"
            android:gravity="center"
            android:text="12 + 5 = ?"
            android:textColor="#F4F6FF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:lineSpacingExtra="4dp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Options Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardOptions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="26dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#22FFFFFF"
        app:strokeColor="#35FFFFFF"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/cardQuestionContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioGroup
            android:id="@+id/rgOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:textSize="15sp"
                android:textColor="#F4F6FF"
                android:fontFamily="@font/poppins_bold"
                android:padding="12dp"
                android:buttonTint="#F4F6FF" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:textSize="15sp"
                android:textColor="#F4F6FF"
                android:fontFamily="@font/poppins_bold"
                android:padding="12dp"
                android:buttonTint="#F4F6FF" />

            <RadioButton
                android:id="@+id/rb3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 3"
                android:textSize="15sp"
                android:textColor="#F4F6FF"
                android:fontFamily="@font/poppins_bold"
                android:padding="12dp"
                android:buttonTint="#F4F6FF" />

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 4"
                android:textSize="15sp"
                android:textColor="#F4F6FF"
                android:fontFamily="@font/poppins_bold"
                android:padding="12dp"
                android:buttonTint="#F4F6FF" />

        </RadioGroup>
    </com.google.android.material.card.MaterialCardView>

    <!-- Result -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:text=""
        android:textColor="#F4F6FF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/cardOptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons Row -->
    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:text="Submit"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            app:cornerRadius="18dp"
            app:backgroundTint="#FFFFFF"
            android:textColor="#1A1F3A" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Next"
            android:enabled="false"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            app:cornerRadius="18dp"
            app:backgroundTint="#33FFFFFF"
            android:textColor="#F4F6FF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
